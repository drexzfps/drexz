-- Cria a interface
local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "HitboxInterface"

-- Cria a hitbox
local hitbox = Instance.new("Frame", gui)
hitbox.Name = "HITBOX_DREXZ"
hitbox.Size = UDim2.new(0, 100, 0, 100) -- 10x10 (tamanho médio)
hitbox.Position = UDim2.new(0.5, -50, 0.5, -50) -- centro da tela
hitbox.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- vermelho
hitbox.BackgroundTransparency = 0.5
hitbox.BorderSizePixel = 2
hitbox.Active = true
hitbox.Draggable = true

-- Texto identificando a hitbox
local label = Instance.new("TextLabel", hitbox)
label.Size = UDim2.new(1, 0, 0, 20)
label.Position = UDim2.new(0, 0, 0, -20)
label.Text = "HITBOX DREXZ"
label.BackgroundTransparency = 1
label.TextColor3 = Color3.new(1, 1, 1)
label.Font = Enum.Font.SourceSansBold
label.TextSize = 14

-- Função para detectar se algum jogador está dentro da hitbox (simples)
local function checkHit()
	for _, otherPlayer in pairs(game.Players:GetPlayers()) do
		if otherPlayer ~= player and otherPlayer.Character and otherPlayer.Character:FindFirstChild("HumanoidRootPart") then
			local root = otherPlayer.Character.HumanoidRootPart
			local screenPos, onScreen = workspace.CurrentCamera:WorldToViewportPoint(root.Position)

			if onScreen then
				local x, y = screenPos.X, screenPos.Y
				local guiPos = hitbox.AbsolutePosition
				local guiSize = hitbox.AbsoluteSize

				if x >= guiPos.X and x <= guiPos.X + guiSize.X and
				   y >= guiPos.Y and y <= guiPos.Y + guiSize.Y then
					print("Jogador detectado na HITBOX DREXZ: " .. otherPlayer.Name)
				end
			end
		end
	end
end

-- Checa repetidamente a cada segundo
while true do
	checkHit()
	wait(1)
end
